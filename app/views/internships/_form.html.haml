= simple_form_for([@internship.enterprise, @internship], html: { class: 'form-horizontal' }) do |f|

  = f.input :title

  = f.input :start_date, as: :date

  = f.input :end_date, as: :date

  = f.input :requirements, as: :text

  = f.input :semester, collection: 1..8, include_blank: false

  = f.input :benefits, as: :text

  = f.input :observation, as: :text

  = f.association :courses, as: :check_boxes

  = f.button :submit, 'Gravar'
