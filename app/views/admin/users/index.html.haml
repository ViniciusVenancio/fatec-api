.page-header
  %h1
    Usuários
    %small= link_to image_tag("model-add.png"), new_admin_user_path
- unless @users.empty?
  %table.table.table-hover.table-striped
    %thead
      %tr
        %th= User.human_attribute_name(:name)
        %th= User.human_attribute_name(:email)
        %th= User.human_attribute_name(:role)
        %th{ colspan: 3 }
    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.email
          %td= user.role
          %td= link_to image_tag("lapis.png"), edit_admin_user_path(user)
          %td
            = link_to image_tag("delete.png"), admin_user_path(user), method: :delete, data: { confirm: "Deseja excluir a empresa #{user.name}?" }
- else
  .alert.alert-warning{ role: "alert" }
    Não há usuários cadastradas
