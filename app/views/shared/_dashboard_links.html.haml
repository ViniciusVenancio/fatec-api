.jumbotron
  %h1 Olá, #{current_user.name}!
  %span
    %strong Último login:
    #{l(current_user.last_sign_in_at.to_date)}
  %br
  %span
    %strong Última atualização:
    #{l(current_user.updated_at.to_date)}
  = image_tag('user.png')
.page-header
  %h1 Links úteis
.row
  .col-xs-6.col-md-3
    = link_to '#', class: 'thumbnail ajax-link', data: { link: new_course_path, toggle: "modal", target: ".myModal" } do |link|
      .useful-links
        = image_tag('college.png')
        %span Novo curso
  %span.clear

  .col-xs-6.col-md-3
    = link_to '#', class: 'thumbnail ajax-link', data: { link: new_enterprise_path, toggle: "modal", target: ".myModal" } do |link|
      .useful-links
        = image_tag('people.png')
        %span Nova empresa
  %span.clear

  .col-xs-6.col-md-3
    = link_to '#', class: 'thumbnail ajax-link', data: { link: new_notice_path, toggle: "modal", target: ".myModal" } do |link|
      .useful-links
        = image_tag('news.png')
        %span Nova notícia
  %span.clear

  - if current_user.admin?
    .col-xs-6.col-md-3
      = link_to '#', class: 'thumbnail' do |link|
        .useful-links
          = image_tag('new-user.png')
          %span Novo usuário

= render 'shared/default_modal'
